  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "apollo-server": "^2.15.0",
    "apollo-server-express": "^2.15.0",
    "bluebird": "^3.7.2",
    "cross-env": "^7.0.2",
